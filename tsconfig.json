{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module System */
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",

    /* Type Support */
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Debugging */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
